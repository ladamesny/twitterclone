<div class="container col-md-4 col-md-offset-4">
	<%= render 'shared/header', header: "Login" %>
	<div class="row">
		<%= form_tag '/login', method: 'post',class: 'form-horizontal', role: 'form' do %>
			<div class="form-group">
				<div class="col-sm-2 control-label">
					<%= label_tag :username %>
				</div>
				<div class="col-sm-6">
				<%= text_field_tag :username, params[:username], class: 'form-control' %>
				</div>
			</div>

			<div class="form-group">
				<div class="col-sm-2 control-label">
					<%= label_tag :password %>
				</div>
				<div class="col-sm-6">
					<%= password_field_tag :password, params[:password], class: 'form-control' %>
				</div>
			</div>

			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
				<%= submit_tag 'login', class: "btn btn-success" %>
				</div>
			</div>
		<% end %>
	</div>
</div>
