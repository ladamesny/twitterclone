
<div class="container col-md-4 col-md-offset-4">

<%= render 'shared/header', header: "Register" %>
<%= render 'shared/errors', obj: @user %>
	<div class="row">
		<%= form_for @user, html: {class: 'form-horizontal', role: 'form'} do |f| %>

			<div class="form-group">
				<%= f.label :username, class: "control-label col-sm-2" %>
				<div class="col-sm-6">
				<%= f.text_field :username, class: 'form-control' %>
				</div>
			</div>

			<div class="form-group">
				<%= f.label :email, class: "control-label col-sm-2" %>
				<div class="col-sm-6">
				<%= f.text_field :email, class: 'form-control' %>
				</div>
			</div>

			<div class="form-group">
				<%= f.label :password, class: "control-label col-sm-2" %>
				<div class="col-sm-6">
				<%= f.password_field :password, class: 'form-control' %>
				</div>
			</div>

			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
				<%= f.submit "Register", class: "btn btn-success" %>
				</div>
			</div>

		<% end %>
	</div>
</div>
